<div class="col-12 welcome-text">

<h2>Welcome Back</h2>
    <form>
        <div class="form-group">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                <div class="input-group-text"><i class="fa-solid fa-user"></i></div>
                </div>
                <input type="text" class="form-control" id="username-login" placeholder="Username">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                <div class="input-group-text"><i class="fa-solid fa-lock"></i></div>
                </div>
                <input type="password" class="form-control" id="password-login" placeholder="Password">
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block" id="login">Login</button>
    </form>

    <p class="text-center">Don't have an account? <a href="/signup">Sign up here</a></p>

</div>

<!-- modal setup -->
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-title">Error</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/login.js"></script>
<div class="col-3">
    <section id="sidebar">

        <h2>Travel to the stars, Read!</h2>
        <ol>
            {{#each posts as |post|}}
            <li>
                <a href="/dashboard/edit/{{post.id}}" class="edit-link">{{post.title}} <span>{{format_date post.created_at}}</span></a>
            </li>
            {{/each}}
        </ol>

    </section>

    <section class="add-post">
        <a href="/dashboard/addpost"><i class="fa-solid fa-plus"></i> Create New Post</a>
    </section>
</div>
<div class="col-9">
    <ol>
        {{#each posts as |post|}}
        <li class="list-group-item">
            {{> post-info post}}
        </li>
        {{/each}}
    </ol>
</div>